{% extends "base.html.twig" %}

{% block title %}Ajouter un auteur
{% endblock %}

{% block stylesheet %}
	<link
		rel="stylesheet"
		href="/assets/css/output.css">
{% endblock %}

{% block body %}
	{% include "components/navbar.html.twig" %}
	<main
		class="w-8/10 m-auto mt-5 bg-white rounded-2xl shadow-2xl shadow-emerald-700 p-5 relative">
		<h2
			class="text-center text-5xl font-bold mb-8">
			Ajouter un auteur
		</h2>
		<form
			action="/auteurs/add"
			method="post"
			class="bg-white flex flex-col w-2/3 m-auto gap-5">
			<div
				class="flex flex-col gap-1">
				<label
					for="prenom"
					class="text-2xl">
					Pr√©nom
				</label>
				<input
					type="text"
					id="prenom"
					name="prenom"
					class="input"
					required>
			</div>
			<div
				class="flex flex-col gap-1">
				<label
					for="nom"
					class="text-2xl">
					Nom
				</label>
				<input
					type="text"
					id="nom"
					name="nom"
					class="input"
					required>
			</div>
			<div
				class="flex flex-col gap-1">
				<label
					for="biographie"
					class="text-2xl">
					Biographie
				</label>
				<textarea
					name="biographie"
					id="biographie"
					class="input"
					rows="10"
					required></textarea>
			</div>
			<button
				type="submit"
				class="boutton text-3xl bg-teal-400 hover:bg-teal-600 absolute top-5 right-5">
				Ajouter
			</button>
		</form>
	</main>
{% endblock %}
