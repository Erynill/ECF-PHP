{% extends "base.html.twig" %}

{% block title %}Livres
{% endblock %}

{% block stylesheet %}
	<link
		rel="stylesheet"
		href="/assets/css/output.css">
{% endblock %}

{% block body %}
	{% include "components/navbar.html.twig" %}
	<main
		class="w-8/10 m-auto mt-5 bg-white rounded-2xl shadow-2xl shadow-emerald-700 p-5 relative">
		<h2
			class="text-center text-5xl font-bold mb-8">
			Ajouter un livre
		</h2>
		<form
			action="/livres/add"
			method="post"
			class="bg-white flex flex-col w-2/3 m-auto gap-5">
			<div
				class="flex flex-col gap-1">
				<label
					for="titre"
					class="text-2xl">
					Titre
				</label>
				<input
					type="text"
					id="titre"
					name="titre"
					class="input"
					required>
			</div>
			<div
				class="flex flex-col gap-1">
				<label
					for="auteur"
					class="text-2xl">
					Auteur
				</label>
				<select
					name="auteur"
					id="auteur"
					class="input"
					required>
					<option
						value=""
						disabled
						selected
						hidden>--Choisissez l'auteur--
					</option>
					{% for auteur in data.auteurs %}
						<option
							value="{{auteur.id}}">{{auteur.prenom}}
							{{auteur.nom}}
						</option>
					{% endfor %}
				</select>
			</div>
			<div
				class="flex flex-col gap-1">
				<label
					for="categorie"
					class="text-2xl">
					Catégorie
				</label>
				<select
					name="categorie"
					id="categorie"
					class="input"
					required>
					<option
						value=""
						disabled
						selected
						hidden>--Choisissez la catégorie--
					</option>
					{% for categorie in data.categories %}
						<option
							value="{{categorie.id}}">{{categorie.nom}}
						</option>
					{% endfor %}
				</select>
			</div>
			<div
				class="flex flex-col gap-1">
				<label
					for="annee_publication"
					class="text-2xl">
					Année de publication
				</label>
				<input
					type="number"
					id="annee_publication"
					name="annee_publication"
					class="input"
					required>
			</div>
			<div
				class="flex flex-col gap-1">
				<label
					for="isbn"
					class="text-2xl">
					ISBN
				</label>
				<input
					type="text"
					id="isbn"
					name="isbn"
					class="input"
					required>
			</div>
			<div
				class="flex flex-col gap-1">
				<span
					class="text-2xl">Disponible :
				</span>
				<div>
					<input
						type="radio"
						id="true"
						name="disponible"
						value="1"
						class="ml-5"
						checked>
					<label
						for="true"
						class="text-2xl">
						Oui
					</label>
					<input
						type="radio"
						id="false"
						name="disponible"
						value="0"
						class="ml-5">
					<label
						for="false"
						class="text-2xl">
						Non
					</label>
				</div>
			</div>
			<div
				class="flex flex-col gap-1">
				<label
					for="synopsis"
					class="text-2xl">
					Synopsis
				</label>
				<textarea
					name="synopsis"
					id="synopsis"
					class="input"
					rows="8"
					required></textarea>
			</div>
			<button
				type="submit"
				class="boutton text-3xl bg-teal-400 hover:bg-teal-600 absolute top-5 right-5">
				Ajouter
			</button>
		</form>
	</main>
{% endblock %}
