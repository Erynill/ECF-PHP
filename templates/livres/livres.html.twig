{% extends 'base.html.twig' %}

{% block stylesheet %}
	<link
		rel="stylesheet"
		href="/assets/css/output.css"/>
{% endblock %}

{% block title %}
	{{ data.livres.titre }}
{% endblock %}

{% block script %} <script src="/assets/js/libraries/sweetalert2.all.min.js"></script>
	 <script type="module" src="/assets/js/livres.js"></script>
{% endblock %}

{% block body %}
	{% include "components/navbar.html.twig" %}

	<main
		class="w-8/10 m-auto bg-white flex flex-col gap-7 p-5 rounded-2xl mt-10 shadow-2xl shadow-emerald-700 ring
			ring-emerald-700/30 livre">
		{{ data.livres.synopsis|raw }}
		<div
			class="flex items-end">
			<h3
				class="text-3xl font-semibold">
				{{ data.auteurs.prenom }}
				{{ data.auteurs.nom }}
			</h3>
			<span
				class="text-2xl italic">,
				{{ data.livres.annee_publication }}
			</span>
		</div>
		<div
			class="text-xl bg-neutral-400/50 w-fit p-2 px-3 rounded-2xl ml-3">{{ data.categories.nom }}
		</div>
		<div
			class="flex mt-10 items-end">
			{% if data.livres.disponible %}
				<div
					class="bg-emerald-400 text-3xl p-3 rounded-3xl">Disponible
				</div>
			{% else %}
				<div
					class="bg-neutral-500 text-3xl text-neutral-100 p-3 rounded-3xl">Pas disponible
				</div>
			{% endif %}
			<span
				class="ml-auto text-lg">{{ data.livres.isbn }}
			</span>
		</div>
		{% if role == "admin" %}
			<div
				class="flex justify-end text-2xl mt-5 gap-5">
				<a
					href="/livres/modify/{{data.livres.id}}"
					class="boutton bg-amber-400 hover:bg-amber-500">Modifier
				</a>
				<a
					href="/livres/delete?id={{data.livres.id}}"
					id="supprBtn"
					class="boutton bg-red-500 hover:bg-red-700"
					data-id="{{data.livres.id}}">Supprimer
				</a>
			</div>
		{% endif %}

	</main>
{% endblock %}
